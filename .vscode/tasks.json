{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: gcc arquivo de build ativo",
      "command": "/usr/bin/gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${workspaceFolder}/src/*.c", 
        "${workspaceFolder}/src/welcomScreen/*.c",
        "-o",
        "${workspaceFolder}/bin/bank_app",
        "-I",
        "${workspaceFolder}/src/include", 
        "-lncurses"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Tarefa gerada pelo Depurador."
    }
  ],
  "version": "2.0.0"
}